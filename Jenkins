pipeline
{
    agent any
    stages
    {
        stage('Build and send initial slack message')
        {
            steps
            {
                sh 'echo Building...'
                slackSend message:"Build Started - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)"
            }
        }
        stage('Linting DockerFile')
        {
            steps
            {
                script
                {
                    sh "hadolint Dockerfile"
                }
            }
        }
    }
}