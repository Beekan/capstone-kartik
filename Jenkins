pipeline
{
    agent any
    stages
    {
        stage('Build and send initial slack message')
        {
            steps
            {
                sh 'echo Building...'
                slackSend message:"Build Started - ${env.JOB_NAME}"
            }
        }
        stage('Installign dependencies')
        {
            steps
            {
                sh 'pip install --upgrade pip'
	            sh 'pip install --trusted-host pypi.python.org -r requirement.txt'   
            }
        }
        
    }
}