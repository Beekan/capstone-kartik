pipeline
{
    agent any
    stages
    {
        stage('Build and send initial slack message')
        {
            steps
            {
                sh 'echo Building...'
                slackSend message:"Build Started - ${env.JOB_NAME}"
            }
        }
        stage('linting')
        {
            steps
            {
                script
                {
                    docker.image('hadolint/hadolint:latest-debian').inside()
                    {
                        sh 'hadolint Dockerfile'
                        
                    }
                }
            }
        }
        
    }
}