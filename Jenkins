pipeline
{
    agent any
    stages
    {
        stage('Build and send initial slack message')
        {
            steps
            {
                sh 'echo Building...'
                slackSend message:"Build Started - ${env.JOB_NAME}"
            }
        }
        stage('set up')
        {
            steps
            {
                script
                {
                    docker.image('python:3.7.3-stretch').inside()
                    {
                        sh "make setup install lint"
                    }
                }
            }
        }
    }
}